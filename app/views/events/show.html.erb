 <h1><%= @event.eventname %></h1>
 
 <%= link_to "Edit Event", edit_event_path, class: 'btn btn-success' %>
 
 <div class="row">
   <div class="col-md-8">
     <% @event.applications.each do |application| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to application.appname, event_application_path(@event, application) %> 
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <%= link_to "New Application", new_event_application_path(@event), class: 'btn btn-success' %>
     <%= link_to "Delete Event", @event, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this event?' } %> 
   </div>
 </div>